<Window x:Class="DataBase.WindowAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase"
        mc:Ignorable="d"
        Title="Добавить" Height="272" Width="270" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="340" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FF7F7FD5"/>
                <GradientStop Color="#FF91EAE4" Offset="1"/>
                <GradientStop Color="#FF86A8E7" Offset="0.531"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="textBox_Name" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134" Height="34"/>
        <TextBox x:Name="textBox_Age" HorizontalAlignment="Center" Margin="0,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135" Height="34"/>
        <TextBox x:Name="textBox_Password" HorizontalAlignment="Center" Margin="0,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134" Height="34"/>
        <TextBox x:Name="textBox_Status" HorizontalAlignment="Center" Margin="0,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135" Height="34"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="21,14,0,0" VerticalAlignment="Top"/>
        <Label Content="Age" HorizontalAlignment="Left" Margin="31,53,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="3,92,0,0" VerticalAlignment="Top"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="20,131,0,0" VerticalAlignment="Top"/>
        <Button Content="Добавить" HorizontalAlignment="Center" Height="38" Margin="0,182,0,0" VerticalAlignment="Top" Width="135" Click="Button_Click"/>

    </Grid>
</Window>
